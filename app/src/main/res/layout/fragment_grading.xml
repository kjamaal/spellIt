<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.kirkplace.spellit.activities.GradingFragment" android:id="@+id/gradeFragment">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/grading_answer"
        android:id="@+id/gradedAnswer"
        android:layout_gravity="center|top"
        android:layout_marginTop="25dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/missing_letters"
        android:id="@+id/missingLetters"
        android:layout_gravity="center|top"
        android:inputType="text"
        android:enabled="true"
        android:layout_marginTop="100dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Retry"
        android:id="@+id/retryBtn"
        android:layout_gravity="center|bottom"
        android:layout_marginBottom="100dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Word"
        android:id="@+id/newWordBtn"
        android:layout_gravity="center|bottom"
        android:layout_marginBottom="50dp" />

</FrameLayout>
